<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/apartment_image_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@mipmap/edge" />

            <TextView
                android:id="@+id/rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/thumbnail"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/gender"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/black_alpha_40"
                android:fontFamily="sans-serif-condensed"
                android:paddingLeft="5dp"
                android:text=" $  "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/apploizc_white_color"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/vacancy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/placeName"
                android:layout_marginLeft="10dp"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:text="Looking for 2 Male or Female Roomies"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/movindate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="9dp"
                android:layout_marginRight="10dp"
                android:paddingTop="10dp"
                android:text="10/10/1989" />

            <TextView
                android:id="@+id/placeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignStart="@+id/vacancy"
                android:layout_below="@+id/thumbnail"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:text="Arlington, Texas, US"
                android:textStyle="bold" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>